#!/bin/bash

prefix="@prefix@"
exec_prefix="@exec_prefix@"
includedir="@includedir@"
libdir="@libdir@"
pkglibdir="@pkglibdir@"
LIBS="@LIBS@"
CXX="@CXX@"
CXXFLAGS="@CXXFLAGS@"
datarootdir="@datarootdir@"
transform=`echo '@program_transform_name@' | sed -e 's/\\$\\$/$/'`

case $1 in
	"--cxx")
		echo @CXX@
		;;
	"--cxxflags")
		echo @CXXFLAGS@
		;;
	"--cppflags")
		echo -n -I@includedir@/
		echo gnucap | sed -e "$transform"
		;;
	"--ldflags")
		echo -L@libdir@ -lgnucap
		;;
	"--includedir")
		echo -n @includedir@/
		echo gnucap | sed -e "$transform"
		;;
	"--pkglibdir")
		echo -n @libdir@/
		echo gnucap | sed -e "$transform"
		;;
	"--libdir")
		echo -n @libdir@
		;;
	"--data")
		echo @datarootdir@
		;;
	"--exec-prefix")
		echo $exec_prefix
		;;
	*)
	echo $0 --cppflags
	echo $0 --cxxflags
	echo $0 --cxx
	echo $0 --ldflags
	echo $0 --pkglibdir
	echo $0 --libdir
	echo $0 --libs
	echo $0 --exec-prefix
	echo $0 --data
esac
